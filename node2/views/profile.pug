include ./mixins/navbar
doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title TheCandle.com
        link(rel="stylesheet", href="/css/styleprof.css") 
        style(type="text/css").
          p{
            color:white
          }   
          a{
            color:blue
          }
            
    body 
        +navbar(userDetail)
        .cont-all
         .container1  
            h1 Profile 
            p #{userDetail.name} 
            p #{userDetail.email}

         .container2 
            h1 interested in 
            p Add you interest or skills you have
            form(action="/interest-post", method="POST") 
             input(type="text" , name="interest", id="interest",required) 
             button(type="submit") Add  

            
        a(href="/logout") Logout
                